body {
  margin: 0;
}

.delay-nav {
  animation-delay: 0.3s;
}

.delay-container {
  animation-delay: 0.5s;
}

.delay-foot {
  animation-delay: 0.7s;
}

.logo {
  position: absolute;
  top: 30px;
  left: 30px;
  width: 56px;
  height: 56px;
  z-index: 10;
}

#hamburger {
  position: fixed;
  top: 38px;
  right: 38px;
  z-index: 10;
}

#hamburger img {
  width: 28px;
  height: 21px;
}

/* The side navigation menu */
.sidenav {
  height: 100%; /* 100% Full-height */
  width: 0; /* 0 width - change this with JavaScript */
  position: fixed; /* Stay in place */
  z-index: 110; /* Stay on top */
  top: 0;
  right: 0;
  /* background-color: #111;  Black */
  background-image: url('../img/bg.jpg');
  background-size: 100% 100%;
  overflow-x: hidden; /* Disable horizontal scroll */
  /* padding-top: 60px;  Place content 60px from the top  */
  transition: 0.2s; /* 0.5 second transition effect to slide in the sidenav */
}

/* The navigation menu links */
.sidenav .page-link a {
  text-decoration: none;
  color: white;
  font-size: 40px;
  font-weight: 600;
  line-height: 46px;
  display: block;
  transition: 0.3s;
}

.sidenav .page-link a span {
  display: block;
}

/* When you mouse over the navigation links, change their color */
.sidenav .page-link a:hover,
.offcanvas .page-link a:focus {
  border-left: 6px solid white;
}

.sidenav .page-link a span:hover,
.offcanvas .page-link a span:focus {
  opacity: 0.6;
}

.sidenav .page-link a.active {
  opacity: 0.6;
  pointer-events: none;
  cursor: default;
}

/* Position and style the close button (top right corner) */
.sidenav .closebtn {
  position: absolute;
  font-size: 36px;
  margin-left: 50px;
  top: 38px;
  right: 40px;
}

.pointer {
  cursor: pointer;
}

/* Style page content - use this if you want to push the page content to the right when you open the side navigation */
#main {
  transition: margin-left .5s;
  padding: 20px;
}

#mySidenav footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 16px;
}

#mySidenav .social-link {
  padding: 8px 16px;
}

#mySidenav .social-link  a {
  display: inline;
  padding: 0;
  margin: 0;
  transition: 0.2s;
}

#mySidenav .social-link  a:hover {
  opacity: 0.6;
}

#mySidenav .social-link img {
  margin-right: 4px;
  height: 32px;
  width: 32px;
}

#mySidenav footer span {
  color: white;
  font-size: 14px;
  margin: 8px 16px;
}

#mySidenav .page-link {
  margin-top: 130px;
}

#mySidenav .page-link a {
  padding: 8px 8px 16px 32px;
  font-weight: 600;
  line-height: 1.15;
}

.pointer {
  cursor: pointer;
}

.breadcrum-container {
  position: absolute;
  top: 30px;
  left: 153px;
  z-index: 10;
  /* height: 50px; */
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

/* Style the list */
ul.breadcrumb {
  padding: 0;
  list-style: none;
  font-size: 17px;
  margin: auto;
}

ul.breadcrum .ic-home {
  width: 23px;
  height: 20px;
  display: inline-block;
}

/* Display list items side by side */
ul.breadcrumb li {
  display: block;
  font-size: 12px;
  font-weight: 600;
  text-align: center;
  color: #ffffff;
  float: left;
  line-height: 24px;
  font-family: "GillSans-SemiBold";
}

ul.breadcrumb li img {
  vertical-align: center;
}

/* Add a slash symbol (/) before/behind each list item */
ul.breadcrumb li + li:before {
  padding: 0 8px;
  content: url('../img/icon/ic-arrow-white.png'); /* with class ModalCarrot ??*/
}

/* Add a color to all links inside the list */
ul.breadcrumb li a {
  color: white;
  text-decoration: none;
  transition: 0.2s;
  opacity: 0.5;
  font-family: "GillSans-SemiBold";
}

/* Add a color on mouse-over */
ul.breadcrumb li a:hover {
  color: #e4b315;
  opacity: 1;
}

.sticky {
  position: fixed;
  top: 0;
  box-shadow: 0 2px 8px 0 rgba(188, 204, 217, 0.25);
}

.sticky-crumb {
  position: fixed;
  top: 16px;
  left: 32px;
  z-index: 10;
}

.sticky-crumb ul li {
  color: #1e384f;
}

.sticky-crumb ul li a {
  color: #1e384f;
}

.sticky-crumb ul li + li:before {
  content: url('../img/icon/ic-arrow.png');
}

.sticky-sidenav {
  position: fixed;
  top: 18px !important;
  right: 38px !important;
}

.product-footer {
  height: 48px;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  background-color: #1e384f;
}

.product-footer span {
  font-size: 16px;
  text-align: center;
  color: #ffffff;
  font-weight: lighter;
  letter-spacing: 0.4px;
}

.tabs {
  height: 56px;
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 3;
}

.tabs .tab-button {
  font-size: 16px;
  color: #1e384f;
  text-align: center;
  text-transform: uppercase;
  align-items: center;
  display: flex;
}

.tab-button button {
  /* padding: 16px 0px; */
  padding: 0px;
  margin: 0 32px;
  outline: 0;
  border: none;
  background: none;
  font-size: 16px;
  color: #1e384f;
  transition: 0.2s;
  height: 100%;
  font-weight: 400;
  cursor: pointer;
  /* box-sizing: content-box; */
}

.tab-button button:hover {
  color: #e4b315;
}

.tab-button span button.active {
  border-bottom: 4px solid #e4b315;
}

.tab-button div {
  height: 56px;
  box-sizing: content-box;
}

.tab-button div button.active {
  border-bottom: 4px solid #e4b315;
}

.tab-button button.active {
  color: #e4b315;
}

.tabcontent {
  display: none;
  position: relative;
}

.container .scroll-indicator {
  position: absolute;
  bottom: 44px;
  right: 36px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  align-items: center;
}

.scroll-indicator img {
  width: 24px;
  height: 60px;
  cursor: pointer;
}

.scroll-indicator span {
  font-size: 14px;
  font-weight: 300;
  color: #1e384f;
  cursor: pointer;
}
