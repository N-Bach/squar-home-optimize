.header {
  width: 100%;
  height: 556px;
  background-image: url('../../img/detail/mychat/bg-mychat.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  box-sizing: border-box;
  position: relative;
  display: flex;
  justify-content: flex-end;
}

.header .content {
  width: 1060px;
  height: 472px;
  position: relative;
  margin: 88px auto 0px auto;
}

.half {
  width: 50%;
  height: 100%;
}

.mg-bottom-8 {
  margin-bottom: 8px;
}

.mg-bottom-26 {
  margin-bottom: 26px;
}

.mg-top-14 {
  margin-top: 14px;
}

.header .content .hero {
  position: absolute;
  top: 84;
  background-image: url('../../img/detail/mychat/my-chat.png');
  background-size: contain;
  background-repeat: no-repeat;
  height: 100%;
  /* width: 60%; */
  width: 620px;
  z-index: 1;
  top: 0px;
  left: 0px;
}

.header .content .intro {
  position: absolute;
  left: 55%;
  z-index: 2;
  top: 0px;
  width: 530px;
}

.header .content .logo-mychat {
  padding: 0px;
  height: 80px;
}

.header .content .name {
  font-size: 64px;
  font-weight: 600;
  letter-spacing: 2.1px;
  color: #ffffff;
  font-family: 'GillSans-SemiBold';
}

.header .content .description {
  opacity: 0.5;
  font-size: 22px;
  font-weight: 300;
  letter-spacing: 0.3px;
  text-align: left;
  color: #ffffff;
  max-width: 505px;
  font-family: 'GillSans-Light';
}

.header .content .follow {
  font-size: 18px;
  text-align: left;
  color: #ffffff;
  align-items: center;
  display: flex;
  font-weight: 100;
}

.header .content .follow a {
  padding-left: 8px;
  width: 24px;
  height: 24px;
}

.header .content .app-link {
  display: flex;
}

.header .content .app-link button {
  width: 176px;
  height: 48px;
  border-radius: 100px;
  outline: none;
  margin-right: 16px;
  border: none;
  cursor: pointer;
}

.google-play {
  background-color: #1e384f;
  align-items: center;
  display: flex;
  justify-content: center;
  flex-direction: row;
}

.apk {
  color: white;
  font-size: 18px;
  background-color: #ffbe00;
  align-items: center;
  display: flex;
  justify-content: space-evenly;
  flex-direction: row;
}

#ic-download {
  height: 20px;
  width: 20px;
  background-image: url('../../img/icon/ic-download.png');
}

.container {
  width: 100%;
  box-sizing: border-box;
}

#overview .content {
  width: 100%;
  height: 445px;
  padding: 64px 0px;
  display: flex;
  background-color: #f0f5f7;
  background-repeat: no-repeat;
  background-size: cover;
}

#overview .content .text {
  width: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

#overview .wrapper {
  max-width: 520px;
}

#overview .title {
  font-size: 40px;
  font-weight: 600;
  color: black;
  margin-bottom: 16px;
  font-family: 'GillSans-SemiBold';
}

#overview .body {
  opacity: 0.6;
  font-size: 20px;
  line-height: 28px;
  text-align: left;
  color: #1e384f;
  font-weight: 300;
  font-family: 'GillSans-Light';
}

#overview .content .mockup {
  width: 50%;
  box-sizing: border-box;
  text-align: center;
}

.bg-grey {
  background-color: #f0f5f7;
}

#chatting {
  height: 445px;
}

#sticker {
  height: 475px;
}

#datting {
  height: 485px;
}

#feature .feature-group {
  width: 100%;
  padding: 64px 0px;
  display: flex;
}

#feature .mockup {
  width: 50%;
  text-align: center;
}

#feature .text {
  width: 50%;
  display: flex;
  justify-content: flex-start;
}

#feature .text-end {
  width: 50%;
  display: flex;
  justify-content: flex-end;
}

#feature .title {
  font-size: 30px;
  letter-spacing: -0.5px;
  color: #1e384f;
}

#feature .body {
  opacity: 0.7;
  font-size: 18px;
  font-weight: 300;
  line-height: 26px;
  text-align: left;
  color: #1e384f;
  font-family: 'GillSans-Light';
}

.maxwidth-chatting {
  max-width: 542px;
}

.maxwidth-sticker {
  max-width: 460px;
}

.maxwidth-datting {
  max-width: 495px;
}

.mg-bottom-16 {
  margin-bottom: 16px;
}

.mg-bottom-12 {
  margin-bottom: 12px;
}

.mg-left-32 {
  margin-left: 32px;
}

.center-vertical {
  align-items: center;
}

#update .content {
  width: 1010px;
  box-sizing: border-box;
  padding: 52px 0;
  margin: auto;
  /* display: flex; */
}

.content:after {
  content: '';
  clear: both;
  display: block;
}

#update .mockup {
  width: 35%;
  text-align: center;
  float: right;
}

#update .version-list {
  width: 65%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 52px;
  border-left: 2px dashed #1e384f;
  float: left;
}

#update .title {
  font-size: 24px;
  font-weight: 600;
  letter-spacing: -0.4px;
  color: #1e384f;
}

#update .body {
  opacity: 0.7;
  font-size: 18px;
  font-weight: 300;
  line-height: 28px;
  color: #1e384f;
}

#update .body ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

#update .body li {
  padding-left: 1em;
  text-indent: -.7em;
  font-family: 'GillSans-Light';
}

#update .body li::before {
  content: '- ';
}

#update .body ol li::before {
  content: '';
}

#update .version {
  margin-bottom: 40px;
  position: relative;
}
#update .version .title {
  margin-bottom: 8px;
  font-family: 'GillSans-SemiBold';
}

.maxwidth-version {
  max-width: 530px;
}

#update .version:nth-child(odd):before {
  content: url('../../img/icon/ic-update-purple.png');
  position: absolute;
  left: -71px;
  top: 0;
}

#update .version:nth-child(even):before {
  content: url('../../img/icon/ic-update-black.png');
  position: absolute;
  left: -71px;
  top: 0;
}

#update .mockup #new-datting {
  width: 287px;
  height: auto;
}

#update .mockup .wrapper {
  width: 352px;
  height: 582px;
}

#update .app-link {
  display: flex;
}

#update .app-link button {
  width: 160px;
  height: 48px;
  border-radius: 100px;
  outline: none;
  border: none;
  cursor: pointer;
  margin: 0px 8px;
}

.sticky-mockup {
  position: fixed;
  top: 64px;
}

.tab-button button.active {
  color: #99177e;
}

.tab-button button:hover {
  color: #99177e;
}

.tab-button div button.active {
  border-bottom: 4px solid #99177e;
}
.delay-hero {
  animation-delay: 0.3s;
}

.delay-intro {
  animation-delay: 0.5s;
}

.hidden {
  opacity: 0;
}
.visible {
  opacity: 1;
}

.scroll-small {
  width: 100%;
  background-color: white;
  text-align: center;
  display: none;
}

.scroll-small .holder {
  margin: auto;
  padding: 20px;
  font-size: 14px;
  color: #1e384f;
}

@media (max-width: 1100px) {
  .breadcrum-container {
    display: none;
  }
}

@media (max-width: 1060px) {
  .scroll-small {
    display: block;
  }

  .header .content .hero,
  #update .mockup,
  .container .scroll-indicator {
    display: none;
  }

  .container .content {
    width: 100%;
  }

  .header .content .intro {
    margin: 12px auto 0px auto;
    position: relative;
    left: auto;
    width: fit-content;
    padding-left: 20px;
    padding-right: 20px;
  }

  #overview .content {
    flex-direction: column-reverse;
    height: auto;
    padding: 32px 20px;
    width: 100%;
    box-sizing: border-box;
  }

  #overview .content .text {
    width: 100%;
    justify-content: center;
    padding: 16px 0px;
  }

  #overview .content .mockup {
    width: 100%;
    padding: 16px 0px;
  }

  #feature .content .text,
  #feature .text-end,
  #feature .content .mockup {
    width: 100%;
    justify-content: center;
  }

  #feature .feature-group {
    flex-direction: column;
    padding: 32px 20px;
    box-sizing: border-box;
  }

  #feature #sticker {
    flex-direction: column-reverse;
    height: auto;
  }

  #update .version-list {
    width: 100%;
  }

  #update .content {
    padding-left: 32px;
    width: 100%;
    padding-right: 20px;
  }
}

@media (max-width: 510px) {
  .header .content .app-link {
    flex-direction: column;
  }

  .header .content .app-link button {
    width: 230px;
    margin: 8px auto;
  }

  .header {
    height: 624px;
  }

  #overview .content .mockup img,
  #feature .mockup img {
    width: 100%;
  }

  .mg-left-32 {
    margin-left: 0px;
  }

  .tab-button button {
    margin: 0px 8px;
    font-size: 14px;
  }

  #update .version-list {
    padding-left: 24px;
  }

  #update .version:nth-child(odd):before,
  #update .version:nth-child(even):before {
    left: -44px;
  }
}
