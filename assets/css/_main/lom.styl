.header {
  width: 100%;
  height: 556px;
  background-image: url('../../img/detail/lom/Bg.png');
  background-repeat: no-repeat;
  background-size: cover;
  box-sizing: border-box;
  position: relative;
  display: flex;
  justify-content: flex-end;
}

.header .content {
  box-sizing: border-box;
  width: 1280px;
  height: 472px;
  display: flex;
  /* flex-direction: row; */
  /* position: relative; */
  margin: 86px auto 0 auto;
}

.half {
  width: 50%;
  height: 100%;
}

.mg-bottom-8 {
  margin-bottom: 8px;
}

.mg-bottom-26 {
  margin-bottom: 26px;
}

.mg-top-14 {
  margin-top: 14px;
}

.header .content .hero {
  background-image: url('../../img/detail/lom/Characrter.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  height: 100%;
  width: 800px;
  z-index: 1;
}

.header .content .intro {
  left: 53%;
  top: 84;
  z-index: 2;
  top: 84px;
}

.header .content .logo-mychat {
  padding: 0px;
  height: 80px;
}

.header .content .name {
  font-size: 56px;
  font-weight: 600;
  letter-spacing: 2.1px;
  color: #ffffff;
  font-family: "GillSans-SemiBold";
}

.header .content .description {
  opacity: 0.5;
  font-size: 20px;
  font-weight: 300;
  letter-spacing: -0.2px;
  text-align: left;
  color: #ffffff;
  max-width: 528px;
  font-family: "GillSans-Light";
}

.header .content .follow {
  font-size: 16px;
  text-align: left;
  color: #ffffff;
  align-items: center;
  display: flex;
  font-weight: 100;
  font-family: "GillSans-Light";
}

.header .content .follow a {
  padding-left: 8px;
  width: 24px;
  height: 24px;
  text-decoration: none;
  color: white;
}

.header .content .follow span {
  margin-left: 24px;
  border-left: 1px solid white;
  padding-left: 24px;
}

.header .content .app-link {
  display: flex;
}

.header .content .app-link button {
  width: 164px;
  height: 40px;
  border-radius: 100px;
  outline: none;
  margin-right: 16px;
  border: none;
  cursor: pointer;
}

.google-play {
  background-color: #1e384f;
  align-items: center;
  display: flex;
  justify-content: center;
  flex-direction: row;
}

.apk {
  color: white;
  font-size: 18px;
  background-color: #ffbe00;
  align-items: center;
  display: flex;
  justify-content: space-evenly;
  flex-direction: row;
}

.app-store {
  background-color: #1e384f;
}

#ic-download {
  height: 20px;
  width: 20px;
  background-image: url('../../img/icon/ic-download.png');
}

.container {
  width: 100%;
  box-sizing: border-box;
}

.container .content {
  width: 100%;
  /* height: 445px; */
  padding: 32px 0px 16px 0px;
  display: flex;
  background-color: #141c23;
}

.container .content .text {
  width: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.container .content .text-start {
  width: 50%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.container .wrapper {
  max-width: 525px;
  color: white;
}

.container .title {
  font-size: 40px;
  font-weight: 600;
  margin-bottom: 16px;
  font-family: "GillSans-SemiBold";
}

.container .body {
  opacity: 0.4;
  font-size: 18px;
  line-height: 28px;
  text-align: left;
  font-weight: 100;
  letter-spacing: 1px;
  font-family: "GillSans-Light";
}

.container .content .mockup {
  width: 50%;
  box-sizing: border-box;
  align-items: center;
  display: flex;
}

.bg-grey {
  background-color: #f0f5f7;
}

.mg-bottom-16 {
  margin-bottom: 16px;
}

.mg-bottom-32 {
  margin-bottom: 32px;
}

.pd-bottom-12 {
  padding-bottom: 12px;
}

.pd-bottom-32 {
  padding-bottom: 32px !important;
}

.mg-left-32 {
  margin-left: 32px;
}

.pd-left-52 {
  padding-left: 52px;
}

.pd-right-52 {
  padding-right: 52px;
}

.justify-end {
  justify-content: flex-end;
}

.center-vertical {
  align-items: center;
}

#feature ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

#feature li {
  padding-left: 2em;
  text-indent: -2em;
  font-family: "GillSans-Light";
}

#feature li::before {
  content: url('../../img/detail/lom/ic-feature.png');
  padding-right: 16px;
}

footer.product-footer {
  background-color: rgba(20, 28, 35, 0.95);
}

.delay-hero {
  animation-delay: 0.3s;
}

.delay-intro {
  animation-delay: 0.68s;
}

.delay-overview {
  animation-delay: 0.8s;
}

.hidden {
  opacity: 0;
}
.visible {
  opacity: 1;
}

.show-this {
  display: none;
}

/* Large desktop */
@media (min-width: 1200px) {
}

@media (max-width: 1060px) {
  .container .content {
    flex-direction: column;
  }

  .container .reverse {
    flex-direction: column-reverse;
  }

  .container #feature .special-content {
    width: 100%;
    box-sizing: border-box;
    flex-direction: column-reverse;
    padding-left: 20px;
    padding-right: 20px;
  }

  .container div#feature .special-content .half {
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
    justify-content: center;
    margin: 0;
  }

  #feature .special-content .half .mockup img {
    text-align: center;
    max-width: 95%;
    max-height: 95%;
    margin: 0;
  }

  #feature .special-content .half .mockup {
    width: 100%;
    margin: 0 0 16px 0;
    padding: 0;
  }

  .container .content .text {
    width: 100%;
    justify-content: center;
    /* box-sizing: content-box; */
    margin-bottom: 32px;
    box-sizing: border-box;
    padding-left: 20px;
    padding-right: 20px;
  }

  .container .wrapper {
    max-width: 100%;
  }

  .container .content .mockup {
    width: 100%;
    justify-content: center;
    padding-right: 16px;
    padding-left: 16px;
    padding-bottom: 16px;
  }

  .container .content .text-start {
    width: 100%;
    justify-content: center;
    box-sizing: border-box;
    padding-left: 16px;
    padding-right: 16px;
  }

  .show-this {
    display: initial;
  }

  .hide-this {
    display: none;
  }
}

@media (max-width: 735px) {
  .header .content .hero {
    display: none;
  }

  .breadcrum-container {
    display: none;
  }

  .header .content .intro {
    margin: auto;
  }
}

@media (max-width: 505px) {
  .container .content .mockup img {
    max-height: 95%;
    max-width: 95%;
  }

  .header {
    padding: 0px 20px;
  }

  .header .content .intro {
    width: 100%;
    padding-top: 16px;
  }
}

@media (max-width: 480px) {
  .header {
    height: 580px;
  }

  .header .content .intro .name {
    font-size: 52px;
  }

  .header .content .intro .description {
    font-size: 18px;
  }

  .header .content .intro .app-link {
    flex-direction: column;
    align-items: center;
  }

  .header .content .app-link button {
    width: 250px;
  }

  .apk {
    justify-content: center;
  }

  .google-play {
    margin-top: 16px;
  }

  .app-store {
    margin-top: 16px;
  }

  .header .content .follow {
    text-align: center;
    font-size: 14px;
  }

  .header .content .intro .name {
    font-size: 50px;
  }
}

@media (max-width: 362px) {
  .header .content .intro .name {
    font-size: 46px;
  }
}

@media (max-width: 347px) {
  .header {
    height: 660px;
  }
}
